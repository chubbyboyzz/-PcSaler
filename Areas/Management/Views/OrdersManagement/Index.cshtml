@model IEnumerable<PcSaler.DBcontext.Entites.Order>

@{
    ViewData["Title"] = "Quản Lý Đơn Hàng";
}

<link rel="stylesheet" href="~/css/management-style.css" />

<div class="management-container">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="page-header fade-in-up">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <h1><i class="bi bi-cart-check-fill me-2"></i>Quản Lý Đơn Hàng</h1>
                <div class="btn-group">
                    <a asp-action="Create" class="action-btn action-btn-primary">
                        <i class="bi bi-plus-circle"></i>
                        <span>Tạo Đơn Hàng</span>
                    </a>
                    <a asp-controller="Dashboard" asp-action="Index" class="action-btn action-btn-secondary">
                        <i class="bi bi-house"></i>
                        <span>Dashboard</span>
                    </a>
                </div>
            </div>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Table -->
        <div class="table-container fade-in-up" style="animation-delay: 0.2s">
            <div class="table-responsive">
                <table class="table modern-table">
                    <thead>
                        <tr>
                            <th>Mã ĐH</th>
                            <th>Khách Hàng</th>
                            <th class="d-none d-md-table-cell">Ngày Đặt</th>
                            <th>Tổng Tiền</th>
                            <th class="d-none d-lg-table-cell">Trạng Thái</th>
                            <th class="text-center">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong style="color: #667eea;">#@item.OrderID</strong></td>
                                    <td>
                                        <div class="fw-bold">
                                            <i class="bi bi-person-circle me-1 text-muted"></i>
                                            @item.Customer?.FullName
                                        </div>
                                        <small class="text-muted d-md-none">
                                            <i class="bi bi-calendar3 me-1"></i>
                                            @item.OrderDate.ToString("dd/MM/yyyy")
                                        </small>
                                    </td>
                                    <td class="d-none d-md-table-cell">
                                        <i class="bi bi-calendar3 me-1 text-muted"></i>
                                        @item.OrderDate.ToString("dd/MM/yyyy HH:mm")
                                    </td>
                                    <td class="text-nowrap">
                                        <strong style="color: #28a745; font-size: 1.05em;">
                                            @item.TotalAmount.ToString("N0") VNĐ
                                        </strong>
                                    </td>
                                    <td class="d-none d-lg-table-cell">
                                        <span class="status-badge badge-primary">
                                            @item.CurrentStatus?.StatusName
                                        </span>
                                    </td>
                                    <td class="text-center text-nowrap">
                                        <a asp-action="Details" asp-route-id="@item.OrderID" class="btn-table-action btn-table-view" title="Chi Tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.OrderID" class="btn-table-action btn-table-edit" title="Sửa">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.OrderID" class="btn-table-action btn-table-delete" title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6">
                                    <div class="empty-state">
                                        <i class="bi bi-inbox"></i>
                                        <h4>Chưa có đơn hàng nào</h4>
                                        <p>Các đơn hàng sẽ được hiển thị tại đây</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
