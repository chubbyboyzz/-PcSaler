@model IEnumerable<PcSaler.DBcontext.Entites.Order>

@{
    ViewData["Title"] = "Danh Sách Đơn Hàng";
}

<div class="container-fluid">
    <h1 class="mb-4">Danh Sách Đơn Hàng</h1>
    
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Tạo Đơn Hàng Mới</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Khách Hàng</th>
                <th>Ngày Đặt</th>
                <th>Tổng Tiền</th>
                <th>Trạng Thái</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.OrderID</td>
                    <td>@item.Customer?.FullName</td>
                    <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-success fw-bold">@item.TotalAmount.ToString("N0") VNĐ</td>
                    <td><span class="badge bg-info">@item.CurrentStatus?.StatusName</span></td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.OrderID" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Edit" asp-route-id="@item.OrderID" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.OrderID" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
