@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                if (file.size > 5 * 1024 * 1024) {
                    alert('K√≠ch th∆∞·ªõc file qu√° l·ªõn! Vui l√≤ng ch·ªçn file nh·ªè h∆°n 5MB.');
                    event.target.value = '';
                    return;
                }

                const validTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                if (!validTypes.includes(file.type)) {
                    alert('ƒê·ªãnh d·∫°ng file kh√¥ng h·ª£p l·ªá! Vui l√≤ng ch·ªçn file JPG, PNG ho·∫∑c GIF.');
                    event.target.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(){
                    const output = document.getElementById('preview');
                    output.src = reader.result;
                    document.getElementById('imagePreview').style.display = 'block';
                    document.getElementById('noImagePlaceholder').style.display = 'none';
                };
                reader.readAsDataURL(file);
            }
        }

        function loadImageFromUrl() {
            const urlInput = document.querySelector('input[name="ImageURL"]');
            const url = urlInput.value.trim();
            
            if (url) {
                const output = document.getElementById('preview');
                output.src = url;
                output.onerror = function() {
                    alert('Kh√¥ng th·ªÉ t·∫£i ·∫£nh t·ª´ URL n√†y. Vui l√≤ng ki·ªÉm tra l·∫°i!');
                    document.getElementById('imagePreview').style.display = 'none';
                    document.getElementById('noImagePlaceholder').style.display = 'block';
                };
                output.onload = function() {
                    document.getElementById('imagePreview').style.display = 'block';
                    document.getElementById('noImagePlaceholder').style.display = 'none';
                };
            } else {
                document.getElementById('imagePreview').style.display = 'none';
                document.getElementById('noImagePlaceholder').style.display = 'block';
            }
        }

        document.querySelector('form').addEventListener('reset', function() {
            document.getElementById('imagePreview').style.display = 'none';
            document.getElementById('noImagePlaceholder').style.display = 'block';
        });
    </script>
}
