@model PcSaler.DBcontext.Entites.Product

@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
}

<style>
    .details-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }
    .product-image-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 500px;
        position: sticky;
        top: 20px;
    }
    .product-image-container img {
        max-height: 450px;
        max-width: 100%;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }
    .detail-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }
    .detail-card .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px;
        border: none;
    }
    .detail-card .card-body {
        padding: 30px;
    }
    .detail-row {
        padding: 15px;
        border-bottom: 1px solid #e9ecef;
        transition: background-color 0.3s;
    }
    .detail-row:hover {
        background-color: #f8f9fa;
    }
    .detail-row:last-child {
        border-bottom: none;
    }
    .detail-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 5px;
    }
    .detail-value {
        font-size: 1.1rem;
        color: #212529;
    }
    .price-highlight {
        font-size: 2rem;
        font-weight: 700;
        color: #28a745;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }
    .specs-box {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        padding: 20px;
        border-radius: 10px;
        border-left: 4px solid #667eea;
    }
    .action-buttons {
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        margin-top: 20px;
    }
</style>

<div class="details-container">


    <div class="row">
        <!-- Cột bên trái - Hình ảnh -->
        <div class="col-lg-5">
            @if (!string.IsNullOrEmpty(Model.ImageURL))
            {
                <div class="product-image-container">
                    <img src="@Model.ImageURL" alt="@Model.ProductName" class="img-fluid" />
                </div>
            }
            else
            {
                <div class="product-image-container">
                    <div class="text-center text-white">
                        <i class="bi bi-image" style="font-size: 5rem;"></i>
                        <p class="mt-3">Chưa có hình ảnh</p>
                    </div>
                </div>
            }
        </div>

        <!-- Cột bên phải - Thông tin -->
        <div class="col-lg-7">
            <div class="detail-card card">

                <div class="card-body">
                    <div class="detail-row row">
                        <div class="col-md-4 detail-label">
                            <i class="bi bi-hash"></i> ID:
                        </div>
                        <div class="col-md-8 detail-value">
                            <span class="badge bg-secondary">@Model.ProductID</span>
                        </div>
                    </div>

                    <div class="detail-row row">
                        <div class="col-md-4 detail-label">
                            <i class="bi bi-box-seam"></i> Tên Sản Phẩm:
                        </div>
                        <div class="col-md-8 detail-value">
                            <strong style="color: #667eea;">@Model.ProductName</strong>
                        </div>
                    </div>

                    <div class="detail-row row">
                        <div class="col-md-4 detail-label">
                            <i class="bi bi-building"></i> Thương Hiệu:
                        </div>
                        <div class="col-md-8 detail-value">
                            @Model.Brand
                        </div>
                    </div>

                    <div class="detail-row row">
                        <div class="col-md-4 detail-label">
                            <i class="bi bi-tag"></i> Model:
                        </div>
                        <div class="col-md-8 detail-value">
                            @(Model.Model ?? "N/A")
                        </div>
                    </div>

                    <div class="detail-row row">
                        <div class="col-md-4 detail-label">
                            <i class="bi bi-folder"></i> Danh Mục:
                        </div>
                        <div class="col-md-8 detail-value">
                            <span class="badge bg-primary fs-6">@Model.Category?.CategoryName</span>
                        </div>
                    </div>

                    <div class="detail-row row">
                        <div class="col-md-4 detail-label">
                            <i class="bi bi-cash-coin"></i> Giá:
                        </div>
                        <div class="col-md-8 detail-value">
                            <span class="price-highlight">@Model.Price.ToString("N0") VNĐ</span>
                        </div>
                    </div>

                    <div class="detail-row row">
                        <div class="col-md-4 detail-label">
                            <i class="bi bi-boxes"></i> Tồn Kho:
                        </div>
                        <div class="col-md-8 detail-value">
                            @if (Model.Stock > 10)
                            {
                                <span class="badge bg-success fs-6"><i class="bi bi-check-circle"></i> @Model.Stock sản phẩm</span>
                            }
                            else if (Model.Stock > 0)
                            {
                                <span class="badge bg-warning fs-6"><i class="bi bi-exclamation-triangle"></i> @Model.Stock sản phẩm</span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6"><i class="bi bi-x-circle"></i> Hết hàng</span>
                            }
                        </div>
                    </div>

                    <div class="detail-row row">
                        <div class="col-md-4 detail-label">
                            <i class="bi bi-shield-check"></i> Bảo Hành:
                        </div>
                        <div class="col-md-8 detail-value">
                            <span class="badge bg-info fs-6">@Model.WarrantyMonths tháng</span>
                        </div>
                    </div>

                    <div class="detail-row row">
                        <div class="col-md-4 detail-label">
                            <i class="bi bi-calendar-event"></i> Ngày Ra Mắt:
                        </div>
                        <div class="col-md-8 detail-value">
                            @(Model.ReleaseDate?.ToString("dd/MM/yyyy") ?? "N/A")
                        </div>
                    </div>

                    <div class="detail-row row">
                        <div class="col-md-4 detail-label">
                            <i class="bi bi-cpu"></i> Thông Số:
                        </div>
                        <div class="col-md-8">
                            <div class="specs-box">
                                <pre style="margin: 0; white-space: pre-wrap; font-family: inherit;">@(Model.Specifications ?? "Chưa có thông tin")</pre>
                            </div>
                        </div>
                    </div>

                    <div class="action-buttons text-center">
                        <a asp-action="Edit" asp-route-id="@Model.ProductID" class="btn btn-warning btn-lg me-2">
                            <i class="bi bi-pencil-square"></i> Chỉnh Sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left-circle"></i> Quay Lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
