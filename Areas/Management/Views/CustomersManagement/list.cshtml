@model IEnumerable<PcSaler.DBcontext.Entites.Customer>

@{
    ViewData["Title"] = "Danh Sách Khách Hàng";
}

<div class="container-fluid">
    <h1 class="mb-4">Danh Sách Khách Hàng</h1>
    
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Thêm Khách Hàng Mới</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Họ Tên</th>
                <th>Username</th>
                <th>Email</th>
                <th>Số Điện Thoại</th>
                <th>Địa Chỉ</th>
                <th>Ngày Tạo</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CustomerID</td>
                    <td><strong>@item.FullName</strong></td>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>@(item.Phone ?? "-")</td>
                    <td>@(item.Address ?? "-")</td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.CustomerID" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Edit" asp-route-id="@item.CustomerID" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.CustomerID" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
