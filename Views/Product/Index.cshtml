@* File: Views/Product/Index.cshtml *@
@model IEnumerable<PcSaler.Models.ProductListViewModel>

@{
    ViewData["Title"] = ViewBag.CurrentCategory;
}

<div class="container mt-4">

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@(item.ImageURL ?? "/images/no-image.png")" class="card-img-top p-3" alt="@item.ProductName" style="height: 200px; object-fit: contain;">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title" style="font-size: 1rem;">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductID" class="text-decoration-none text-dark">
                                    @item.ProductName
                                </a>
                            </h5>

                            <p class="card-text text-danger fw-bold mt-auto">
                                @item.Price.ToString("#,##0") đ
                            </p>

                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductID" class="btn btn-primary btn-sm mt-2">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>Không tìm thấy sản phẩm nào trong danh mục này.</p>
            </div>
        }
    </div>
</div>