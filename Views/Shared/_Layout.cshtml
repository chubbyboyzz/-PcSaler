<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PCShop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Thêm FontAwesome để hiển thị Icon trong Modal -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

    <!-- CSS riêng cho Modal Login đẹp mắt -->
    <style>
        .login-modal-header {
            background: linear-gradient(135deg, #5563DE, #74ABE2);
            color: white;
        }

        .btn-custom-login {
            background: #5563DE;
            color: white;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-custom-login:hover {
                background: #3c48b5;
                color: white;
                transform: translateY(-2px);
            }

        .form-control:focus {
            border-color: #5563DE;
            box-shadow: 0 0 0 0.2rem rgba(85, 99, 222, 0.25);
        }
    </style>
</head>
<body class="d-flex flex-column vh-100">

    <header class="bg-white shadow-sm sticky-top">

        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">PCShop</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navMenu">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Bộ PC</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Phụ kiện</a></li>
                    </ul>

                    <form class="d-flex" method="get" action="@Url.Action("Index", "Home")">
                        <input class="form-control me-2" name="q" type="search" placeholder="Tìm kiếm sản phẩm..." value="@(ViewBag.Query ?? "")" />
                        <button class="btn btn-outline-primary" type="submit">Tìm</button>
                    </form>

                    <ul class="navbar-nav ms-3">
                        <!-- Nút Đăng nhập kích hoạt Modal -->
                        <li class="nav-item">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <!-- Nếu đã đăng nhập thì hiện tên + nút thoát -->
                                <div class="dropdown">
                                    <a class="nav-link dropdown-toggle fw-bold text-primary" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fa-solid fa-user me-1"></i> @User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" href="#">Hồ sơ</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form method="post" action="@Url.Action("Logout", "Login")">
                                                <button type="submit" class="dropdown-item text-danger">Đăng xuất</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <!-- Nếu chưa đăng nhập: Hiện nút kích hoạt Modal -->
                                <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">
                                    <i class="fa-solid fa-right-to-bracket me-1"></i> Đăng nhập
                                </a>
                            }
                        </li>

                        @await Component.InvokeAsync("CartMenu")
                    </ul>
                </div>
            </div>
        </nav>

        <div class="border-top">
            <div class="container d-flex justify-content-between align-items-center py-2 flex-wrap">

                <div class="dropdown me-3" id="category-dropdown-container">
                    <button class="btn btn-outline-primary fw-semibold dropdown-toggle" type="button" id="categoryDropdownMenu" data-bs-toggle="dropdown" aria-expanded="false">
                        Danh mục
                    </button>

                    @await Component.InvokeAsync("CategoryMenu")
                </div>

                <a href="@Url.Action("Index", "PcBuild")" class="btn btn-primary fw-semibold mt-1 mt-md-0 ms-auto">
                    🧰 Xây dựng PC
                </a>
            </div>
        </div>

    </header>

    <!-- Phần thân trang (RenderBody) -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light mt-auto py-4">
        <div class="container text-center">
            <small>© @DateTime.Now.Year PCShop — Demo</small>
        </div>
    </footer>

    <!-- ========================================== -->
    <!-- MODAL ĐĂNG NHẬP (Box hiển thị ra ngoài) -->
    <!-- ========================================== -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg" style="border-radius: 15px; overflow: hidden;">

                <!-- Header Modal -->
                <div class="modal-header login-modal-header border-0">
                    <div>
                        <h5 class="modal-title fw-bold" id="loginModalLabel">CHÀO MỪNG TRỞ LẠI</h5>
                        <small class="text-white-50">Đăng nhập để tiếp tục mua sắm</small>
                    </div>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Body Modal: Chứa Form -->
                <div class="modal-body p-4">
                    <!-- Form post về Login/Index -->
                    <form method="post" action="@Url.Action("Index", "Login")">
                        <!-- Để redirect quay lại trang hiện tại, ta có thể dùng JS để set value cho input này, hoặc mặc định về Home -->
                        <input type="hidden" name="returnUrl" value="/" />

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="modalUser" name="Username" placeholder="Tên đăng nhập" required>
                            <label for="modalUser"><i class="fa-solid fa-user me-1"></i> Tên đăng nhập</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="modalPass" name="Password" placeholder="Mật khẩu" required>
                            <label for="modalPass"><i class="fa-solid fa-lock me-1"></i> Mật khẩu</label>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4 small">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="modalRemember">
                                <label class="form-check-label text-muted" for="modalRemember">Ghi nhớ tôi</label>
                            </div>
                            <a href="#" class="text-decoration-none text-primary">Quên mật khẩu?</a>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-custom-login py-2 rounded-pill">ĐĂNG NHẬP</button>
                        </div>
                    </form>
                </div>

                <!-- Footer Modal -->
                <div class="modal-footer justify-content-center bg-light border-0">
                    <small>Chưa có tài khoản? <a href="#" class="fw-bold text-decoration-none" style="color: #5563DE">Đăng ký ngay</a></small>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script>
        // 1. Biến toàn cục xác định trạng thái đăng nhập
        const isUserLoggedIn = @(User.Identity?.IsAuthenticated.ToString().ToLower() ?? "false");

        // 2. Hàm cập nhật số lượng giỏ hàng (Gọi hàm này bất cứ khi nào thêm/xóa giỏ)
        function updateHeaderCartCount() {
            const countElement = document.getElementById('cart-count');

            if (isUserLoggedIn) {
                // === LOGIC CHO THÀNH VIÊN (Gọi API) ===
                fetch('/api/APICart/count')
                    .then(res => res.json())
                    .then(count => {
                        countElement.innerText = `(${count})`;
                    })
                    .catch(err => console.error("Lỗi lấy số lượng giỏ hàng:", err));
            } else {
                // === LOGIC CHO KHÁCH (Đếm LocalStorage) ===
                const cart = JSON.parse(localStorage.getItem('guest_cart')) || [];

                // Tính tổng số lượng (Quantity) của tất cả các món
                const totalCount = cart.reduce((sum, item) => sum + (item.Quantity || 0), 0);

                countElement.innerText = `(${totalCount})`;
            }
        }

        // 3. Tự động chạy hàm này khi trang vừa load xong
        document.addEventListener('DOMContentLoaded', updateHeaderCartCount);

        // Cập nhật ReturnUrl động cho Modal (Để đăng nhập xong quay lại đúng trang này)
        document.addEventListener('DOMContentLoaded', function() {
            const returnUrlInput = document.querySelector('#loginModal input[name="returnUrl"]');
            if(returnUrlInput) {
                returnUrlInput.value = window.location.pathname + window.location.search;
            }
        });
    </script>
</body>
</html>
