@model IEnumerable<PcSaler.Models.CategoryProductViewModel>
@{
    ViewData["Title"] = "Trang chủ";
    var categories = ViewBag.Categories as List<PcSaler.DBcontext.Entites.Categories>;
    int? selectedCat = ViewBag.SelectedCat as int?;
    string query = ViewBag.Query as string ?? "";
}

<div class="row mb-4">
    <!-- Bên trái: Danh mục -->
    <div class="col-md-3">
    <h6>Danh mục</h6>

    <ul class="list-unstyled">
        @foreach (var c in categories ?? new List<PcSaler.DBcontext.Entites.Categories>())
        {
            <li class="mb-1 category-item position-relative">

                <a class="text-decoration-none @(selectedCat == c.CategoryID ? "fw-bold" : "")"
                    href="@Url.Action("Index", "Product", new { id = c.CategoryID })">
                    @c.ComponentType
                </a>

                @* Bắt đầu Flyout Box - Sẽ hiển thị khi hover *@
                <div class="flyout-box card shadow-lg p-3">
                    <div class="row">
                        @{
                            // 1. Lấy dữ liệu Filter cho danh mục hiện tại (VD: VGA)
                            // Bạn cần sửa Controller để gửi dữ liệu này qua ViewBag.FlyoutFilters
                            var currentFilters = (ViewBag.FlyoutFilters as IEnumerable<dynamic>)
                            ?.FirstOrDefault(f => f.CategoryKey == c.ComponentType);
                        }
                    </div>
                        @if (currentFilters != null)
                        {
                            @* 2. Lặp qua các nhóm thuộc tính (VD: VGA NVIDIA, Kiểu Bộ Nhớ, Giao Diện) *@
                            @foreach (var filterGroup in currentFilters.Filters.Take(4))
                            {
                                <div class="col-3">
                                    <h6 class="text-primary mb-2 small">@filterGroup.Name</h6>
                                    <ul class="list-unstyled small">
                                        @* 3. Lặp qua các giá trị thuộc tính (VD: RTX 5090, GDDR6, 256 bits) *@
                                        @foreach (var val in filterGroup.Values.Take(6))
                                        {
                                            <li>
                                                @* Link tới trang Product/Index với tham số lọc *@
                                                <a href="@Url.Action("Index", "Product", new { category = c.CategoryID, @filterGroup = val })">@val</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12"><p class="text-secondary small">Đang cập nhật bộ lọc...</p></div>
                        }
                    </div>
            </li>
        }
    </ul>
</div>

    <!-- Bên phải: Banner -->
    <div class="col-md-9">
        <div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/cpu_i7_13700k.jpg" class="d-block w-100 rounded" alt="banner1">
                </div>
                <div class="carousel-item">
                    <img src="~/images/banner2.jpg" class="d-block w-100 rounded" alt="banner2">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>
</div>

<!-- Các danh mục sản phẩm -->
@foreach (var cat in Model)
{
    <div class="p-3 mb-4 rounded" style="background-color: #f5f5f5;"> <!-- Màu xám nhạt -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fw-bold mb-0">@cat.CategoryName</h5>
            <a href="@Url.Action("Index", "Product", new { id = cat.CategoryID })" class="btn btn-sm btn-outline-secondary">
                Xem thêm →
            </a>
        </div>

        <div class="row">
            @foreach (var p in cat.Products.Take(6))  
            {
                <div class="col-md-2 mb-3"> 
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@(string.IsNullOrWhiteSpace(p.ImageURL) ? "/images/no-image.png" : p.ImageURL)"
                             class="card-img-top" style="height:120px; object-fit:cover;" alt="@p.ProductName" />
                        <div class="card-body p-2 d-flex flex-column">
                            <h6 class="card-title text-truncate mb-1" title="@p.ProductName">@p.ProductName</h6>
                            <p class="text-danger fw-bold mb-1">@p.Price.ToString("N0") ₫</p>
                            <a class="btn btn-outline-primary btn-sm mt-auto w-100"
                               href="@Url.Action("Details", "Product", new { id = p.ProductID })">
                                Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
