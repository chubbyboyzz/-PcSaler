@model IEnumerable<PcSaler.Models.CategoryProductViewModel>
@{
    ViewData["Title"] = "Trang chủ";
    var categories = ViewBag.Categories as List<PcSaler.DBcontext.Entites.Categories>;
    int? selectedCat = ViewBag.SelectedCat as int?;
    string query = ViewBag.Query as string ?? "";
}

<div class="row mb-4">
    <div class="col-md-3">
        <h6 class="fw-bold text-uppercase mb-3">Danh mục sản phẩm</h6>
        <ul class="list-unstyled">
            @foreach (var c in categories ?? new List<PcSaler.DBcontext.Entites.Categories>())
            {
                <li class="mb-1 category-item position-relative">
                    <a class="text-decoration-none d-block py-2 px-3 rounded border mb-1 @(selectedCat == c.CategoryID ? "bg-primary text-white" : "text-dark bg-light")"
                       href="@Url.Action("Index", "Product", new { id = c.CategoryID })">
                        @c.ComponentType
                    </a>

                    <div class="flyout-box card shadow-lg p-3" style="display: none; position: absolute; left: 100%; top: 0; z-index: 1000; width: 600px;">
                        <div class="row">
                            @{
                                var currentFilters = (ViewBag.FlyoutFilters as IEnumerable<dynamic>)
                                ?.FirstOrDefault(f => f.CategoryKey == c.ComponentType);
                            }
                        </div>
                        @if (currentFilters != null)
                        {
                            @foreach (var filterGroup in currentFilters.Filters.Take(4))
                            {
                                <div class="col-3">
                                    <h6 class="text-primary mb-2 small fw-bold">@filterGroup.Name</h6>
                                    <ul class="list-unstyled small">
                                        @foreach (var val in filterGroup.Values.Take(6))
                                        {
                                            <li>
                                                <a href="@Url.Action("Index", "Product", new { category = c.CategoryID, @filterGroup = val })" class="text-decoration-none text-secondary">@val</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12"><p class="text-secondary small">Đang cập nhật bộ lọc...</p></div>
                        }
                    </div>
                </li>
            }
        </ul>
    </div>

    <div class="col-md-9">
        <div id="mainCarousel" class="carousel slide shadow-sm rounded overflow-hidden" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/Banner/OIG4 (1).jpg" class="d-block w-100 banner-img"
                         style="height: 380px; object-fit: cover; object-position: center;"
                         alt="banner1">
                </div>
                <div class="carousel-item">
                    <img src="~/images/Banner/OIG4.jpg" class="d-block w-100 banner-img"
                         style="height: 380px; object-fit: cover; object-position: center;"
                         alt="banner2">
                </div>
                <div class="carousel-item">
                    <img src="~/images/Banner/OIG3.jpg" class="d-block w-100 banner-img"
                         style="height: 380px; object-fit: cover; object-position: center;"
                         alt="banner3">
                </div>
                <div class="carousel-item">
                    <img src="~/images/Banner/banner1.jpg" class="d-block w-100 banner-img"
                         style="height: 380px; object-fit: cover; object-position: center;"
                         alt="banner4">
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded-circle p-2 bg-opacity-50" aria-hidden="true"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded-circle p-2 bg-opacity-50" aria-hidden="true"></span>
            </button>
        </div>
    </div>
</div>

@foreach (var cat in Model)
{
    <div class="p-3 mb-4 rounded shadow-sm" style="background-color: #fff; border: 1px solid #eee;">
        <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
            <h5 class="fw-bold mb-0 text-primary text-uppercase">@cat.CategoryName</h5>
            <a href="@Url.Action("Index", "Product", new { id = cat.CategoryID })" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                Xem tất cả →
            </a>
        </div>

        @if (cat.Products != null && cat.Products.Any())
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-6 g-3">
                @foreach (var p in cat.Products.Take(6))
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0 product-card position-relative">

                            <div class="position-absolute top-0 start-0 p-2 z-index-1">
                                @if (p.Stock <= 0)
                                {
                                    <span class="badge bg-secondary">Hết hàng</span>
                                }
                                else if (p.Stock <= 10)
                                {
                                    <span class="badge bg-warning text-dark">Sắp hết</span>
                                }
                                else if (p.Price < 5000000)
                                {
                                    <span class="badge bg-danger">Giảm sốc</span>
                                }
                                else if (p.Price >= 5000000 && p.Price < 15000000)
                                {
                                    <span class="badge bg-success">Hot</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark">New</span>
                                }
                            </div>

                            <a href="@Url.Action("Details", "Product", new { id = p.ProductID })">
                                <img src="@(string.IsNullOrWhiteSpace(p.ImageURL) ? "/images/no-image.png" : p.ImageURL)"
                                     class="card-img-top p-2"
                                     style="height:140px; object-fit:contain;"
                                     alt="@p.ProductName" />
                            </a>

                            <div class="card-body p-2 d-flex flex-column">
                                <h6 class="card-title text-truncate mb-1 small fw-bold" title="@p.ProductName">
                                    <a href="@Url.Action("Details", "Product", new { id = p.ProductID })" class="text-decoration-none text-dark">
                                        @p.ProductName
                                    </a>
                                </h6>

                                <div class="mb-2">
                                    <span class="text-danger fw-bold">
                                        @p.Price.ToString("N0")₫
                                    </span>
                                </div>

                                <div class="mt-auto d-flex gap-1">
                                    <a class="btn btn-outline-secondary btn-sm flex-grow-1"
                                       style="font-size: 0.75rem;"
                                       href="@Url.Action("Details", "Product", new { id = p.ProductID })">
                                        Chi tiết
                                    </a>

                                    <button class="btn btn-primary btn-sm flex-grow-1"
                                            style="font-size: 0.75rem;"
                                            onclick="addToCart(@p.ProductID, 'PRODUCT')">
                                        <i class="fa-solid fa-cart-plus"></i> Thêm
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fa-solid fa-box-open fa-3x text-muted mb-3"></i>
                <p class="text-muted">Chưa có sản phẩm nào trong danh mục này</p>
            </div>
        }
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Lấy trạng thái đăng nhập từ Server
        const isUserLoggedIn = @((User.Identity.IsAuthenticated).ToString().ToLower());

        // === HÀM THÊM VÀO GIỎ HÀNG ===
        function addToCart(id, type) {
            // Tạo hiệu ứng Loading trên nút bấm
            const btn = event.currentTarget; // Lấy chính xác nút bấm
            const originalContent = btn.innerHTML;

            // Khóa nút và hiện vòng xoay
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
            btn.disabled = true;

            if (isUserLoggedIn) {
                // === CASE 1: ĐÃ ĐĂNG NHẬP (GỌI API) ===
                fetch('/api/APICart/add', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        ItemID: id,
                        ItemType: type,
                        Quantity: 1 // Mặc định thêm 1
                    })
                })
                .then(res => {
                    if (res.ok) {
                        showSuccessToast();
                        // Nếu có hàm update số lượng trên header thì gọi ở đây
                        // updateHeaderCartCount();
                    } else {
                        return res.json().then(e => { throw new Error(e.message); });
                    }
                })
                .catch(err => {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Không thể thêm sản phẩm: ' + err.message
                    });
                })
                .finally(() => {
                    // Trả lại trạng thái cũ cho nút
                    btn.innerHTML = originalContent;
                    btn.disabled = false;
                });
            } else {
                // === CASE 2: KHÁCH VÃNG LAI (LOCAL STORAGE) ===
                // Giả lập độ trễ 300ms cho mượt
                setTimeout(() => {
                    let cart = JSON.parse(localStorage.getItem('guest_cart')) || [];

                    // Check trùng sản phẩm
                    const existingItem = cart.find(x => x.ItemID === id && x.ItemType === type);

                    if (existingItem) {
                        // Nếu lưu guest cart kiểu PascalCase (Quantity) thì dùng cái này
                        if(existingItem.Quantity !== undefined) existingItem.Quantity += 1;
                        else existingItem.quantity += 1;
                    } else {
                        // Thêm mới
                        cart.push({
                            ItemID: id,
                            ItemType: type,
                            Quantity: 1, // Lưu ý: Đồng bộ tên biến với logic render giỏ hàng
                            AddedDate: new Date()
                        });
                    }

                    localStorage.setItem('guest_cart', JSON.stringify(cart));
                    showSuccessToast();

                    // Trả lại nút
                    btn.innerHTML = originalContent;
                    btn.disabled = false;

                    // updateHeaderCartCount();
                }, 300);
            }
        }

        // === HIỆU ỨNG THÔNG BÁO (TOAST) ===
        function showSuccessToast() {
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end', // Hiện góc trên phải
                showConfirmButton: false,
                timer: 2000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            });

            Toast.fire({
                icon: 'success',
                title: 'Đã thêm vào giỏ hàng!'
            });
        }

        // CSS phụ trợ cho hiệu ứng hover danh mục (nếu chưa có)
        // Ông có thể xóa đoạn này nếu style.css đã có rồi
        document.querySelectorAll('.category-item').forEach(item => {
            item.addEventListener('mouseenter', () => {
                const flyout = item.querySelector('.flyout-box');
                if(flyout) flyout.style.display = 'block';
            });
            item.addEventListener('mouseleave', () => {
                const flyout = item.querySelector('.flyout-box');
                if(flyout) flyout.style.display = 'none';
            });
        });
    </script>
}