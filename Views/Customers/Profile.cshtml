@model PcSaler.Models.ProfilePageViewModel
@{
    ViewData["Title"] = "Hồ sơ của tôi";
}

<div class="container py-4">
    <h2 class="fw-bold mb-4 vintage-font text-primary">Hồ sơ của tôi</h2>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h5 class="fw-bold mb-0"><i class="fa-solid fa-id-card me-2 text-primary"></i>Thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <img src="https://via.placeholder.com/120" class="rounded-circle border border-3 border-primary p-1" alt="Avatar">
                        <h5 class="mt-2 fw-bold">@Model.CustomerInfo.FullName</h5>
                        <p class="text-muted small">@Model.CustomerInfo.Username</p>
                    </div>
                    <hr />
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item px-0 border-0 d-flex justify-content-between">
                            <strong class="text-muted">Email:</strong>
                            <span>@Model.CustomerInfo.Email</span>
                        </li>
                        <li class="list-group-item px-0 border-0 d-flex justify-content-between">
                            <strong class="text-muted">Số điện thoại:</strong>
                            <span>@(Model.CustomerInfo.Phone ?? "Chưa cập nhật")</span>
                        </li>
                        <li class="list-group-item px-0 border-0 d-flex justify-content-between flex-column">
                            <strong class="text-muted mb-1">Địa chỉ:</strong>
                            <span>@(Model.CustomerInfo.Address ?? "Chưa cập nhật")</span>
                        </li>
                        <li class="list-group-item px-0 border-0 d-flex justify-content-between">
                            <strong class="text-muted">Ngày tham gia:</strong>
                            <span>@Model.CustomerInfo.CreatedAt.ToString("dd/MM/yyyy")</span>
                        </li>
                    </ul>
                    <div class="d-grid mt-3">
                        <button class="btn btn-outline-primary btn-sm">Chỉnh sửa thông tin</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0"><i class="fa-solid fa-clock-rotate-left me-2 text-primary"></i>Lịch sử đơn hàng</h5>
                    <span class="badge bg-primary">@Model.OrderHistory.Count đơn hàng</span>
                </div>
                <div class="card-body p-0">
                    @if (Model.OrderHistory.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">Mã đơn</th>
                                        <th>Ngày đặt</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.OrderHistory)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold">#@order.OrderID</td>
                                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="fw-bold text-danger">@order.TotalAmount.ToString("N0")₫</td>
                                            <td>
                                                <span class="badge @order.StatusColorClass">@order.StatusName</span>
                                            </td>
                                            <td>
                                                <a href="#" class="btn btn-sm btn-outline-secondary">Chi tiết</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="fa-solid fa-box-open fs-1 mb-3 opacity-50"></i>
                            <p>Bạn chưa có đơn hàng nào.</p>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-2">Mua sắm ngay</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>