    // --- LOGIC TÍNH TIỀN REAL-TIME ---
    document.addEventListener("DOMContentLoaded", function() {

        // 1. Hàm tính tổng tiền (Tuân thủ DRY)
        function updateTotalPrice() {
            let total = 0;
            // Duyệt qua tất cả các dropdown
            document.querySelectorAll('.build-component').forEach(function(select) {
                // Lấy thẻ <option> đang được chọn
                const selectedOption = select.options[select.selectedIndex];
                // Lấy giá từ data-price (thêm || 0 để tránh lỗi)
                total += parseFloat(selectedOption.dataset.price || 0);
            });

            // Cập nhật UI
            document.getElementById('total-price').innerText = total.toLocaleString('vi-VN') + '₫';
        }

        // 2. Lắng nghe sự kiện "change" trên TẤT CẢ các dropdown
        document.querySelectorAll('.build-component').forEach(function(select) {
            select.addEventListener('change', function() {

                // Lấy thông tin từ thẻ <select>
                const componentType = this.dataset.type; // 'cpu', 'mainboard',...
                const summaryElement = document.getElementById('summary_' + componentType);

                // Lấy thông tin từ <option>
                const selectedOption = this.options[this.selectedIndex];
                const selectedText = selectedOption.text;

                // Cập nhật bảng tóm tắt
                if (this.value === "") { // Nếu chọn "-- Chọn --"
                    summaryElement.innerText = "...";
                    summaryElement.classList.add('text-muted');
                } else {
                    // Cắt bớt phần giá tiền cho nó gọn
                    const nameOnly = selectedText.split(' - ')[0];
                    summaryElement.innerText = nameOnly;
                    summaryElement.classList.remove('text-muted');
                }

                // Cập nhật tổng tiền
                updateTotalPrice();
            });
        });

        // 3. Tính tổng tiền lần đầu khi tải trang (là 0₫)
        updateTotalPrice();
    });

</script>
